generator client {
  provider        = "prisma-client-js"
  output          = "./generated/Archive"
  previewFeatures = ["fullTextSearch", "fullTextIndex"]
}

datasource db {
  provider = "mysql"
  url      = env("ARCHIVE_URL")
}

model mitarbeiter {
  id         Int       @id @default(autoincrement()) @map("_id")
  Name       String    @db.VarChar(100)
  Mail       String?   @db.VarChar(100)
  Durchwahl  String?   @db.VarChar(3)
  Telefon1   String?   @db.VarChar(100)
  Telefon2   String?   @db.VarChar(100)
  Mobil      String?   @db.VarChar(100)
  Einkauf    String?   @db.Text
  Geld       String?   @db.VarChar(100)
  Pfand      String?   @db.VarChar(100)
  Bild1      String?   @db.Text
  Bild2      String?   @db.Text
  Bild3      String?   @db.Text
  Bild1Type  String?   @db.VarChar(100)
  Bild2Type  String?   @db.VarChar(100)
  Bild3Type  String?   @db.VarChar(100)
  Kurz       String?   @db.VarChar(100)
  isAzubi    Int       @db.TinyInt
  HomeOffice String?   @db.VarChar(100)
  Datum      DateTime? @db.Date
  Abonniert  Int?      @db.TinyInt
}

model pdfs {
  id    Int    @id @default(autoincrement())
  title String @db.VarChar(255)
  body  String @db.Text

  @@fulltext([body])
  @@fulltext([title, body])
  @@fulltext([title])
}

model shorts {
  id     Int    @id @default(autoincrement())
  origin String @db.VarChar(500)
  short  String @unique(map: "short") @db.VarChar(255)
  count  Int?
  user   String @db.VarChar(255)
}

model warenlieferung {
  id                Int       @id @map("_id")
  Artikelnummer     String    @db.VarChar(255)
  Artikelname       String    @db.VarChar(255)
  Artikelname_alt   String?   @db.VarChar(255)
  Datum_Importiert  DateTime? @db.Date
  Datum_Modifiziert DateTime? @db.Date
  Datum_Lieferung   DateTime? @db.Date
  Datum_Neu         DateTime? @db.Date
  Datum_Alter_Preis DateTime? @db.Date
  Datum_Neuer_Preis DateTime? @db.Date
  Alter_Preis       String?   @db.VarChar(255)
  Neuer_Preis       String?   @db.VarChar(255)
}
